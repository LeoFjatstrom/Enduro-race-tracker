<%= form_with(model: [ :driver, @competition_entry ], local: true) do |form| %>
  <% if @competition_entry.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@competition_entry.errors.count, "error") %> prohibited this competition entry from being saved:</h2>
      <ul>
        <% @competition_entry.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :start_number, 'Start Number' %>
    <%= form.number_field :start_number, id: :competition_entry_start_number %>
  </div>

  <div class="field">
    <%= form.label :competition_class, 'Driver Class' %>
    <%= form.collection_select :competition_class_id, CompetitionClass.all, :id, :name, { prompt: "Select a Class" } %>
    <!-- Consider changing to form.select if you have predefined driver classes -->
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>